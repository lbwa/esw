{
  "name": "@eswjs/common",
  "version": "0.0.1",
  "description": "A extremely fast JavaScript/TypeScript library build tool based on esbuild.",
  "author": "Liu Bowen <mr_lbw@outlook.com>",
  "homepage": "https://github.com/lbwa/esw/tree/main/packages/common#readme",
  "license": "MIT",
  "main": "dist/index.cjs.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "directories": {
    "lib": "dist"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lbwa/esw.git",
    "directory": "packages/common"
  },
  "scripts": {
    "watch": "yarn build:raw --watch",
    "clear": "rm -rf dist/*",
    "build": "yarn clear && yarn build:raw & yarn build:types ",
    "build:raw": "esw src/index.ts --bundle --outdir=dist --tsconfig=tsconfig.json",
    "build:types": "tsc -p ./tsconfig.json",
    "test": "echo \"Error: run tests from root\" && exit 1"
  },
  "bugs": {
    "url": "https://github.com/lbwa/esw/issues"
  },
  "devDependencies": {
    "esw": "^0.2.1",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "lodash": "^4.17.21",
    "typescript": "^4.3.5"
  },
  "peerDependenciesMeta": {
    "typescript": {
      "optional": true
    }
  },
  "dependencies": {
    "consola": "^2.15.3"
  }
}
