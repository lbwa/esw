{
  "extends": "@lbwa/tsconfig",
  "compilerOptions": {
    "outDir": "dist",
    "lib": ["esnext"],
    "baseUrl": ".",
    "paths": {
      "@root/*": ["./src/*"],
      "@utils/*": ["./src/utils/*"],
      "@bundle/*": ["./src/bundle/*"],
      "@cli/*": ["./src/cli/*"],
      "@plugins/*": ["./src/plugins/*"],
      "@inference/*": ["./src/inference/*"]
    }
  },
  "exclude": ["**/node_modules", "**/.*/", "./bin/*.js"]
}
