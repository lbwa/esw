{
  "name": "esw",
  "version": "0.12.0",
  "description": "A JavaScript/TypeScript library build tool. It offers blazing fast performance utilizing esbuild, and requires zero configuration.",
  "keywords": [
    "esbuild",
    "typescript",
    "library",
    "build-tool"
  ],
  "author": "Liu Bowen <mr_lbw@outlook.com>",
  "homepage": "https://github.com/lbwa/esw/tree/main/packages/esw#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "esw": "bin/esw.js"
  },
  "directories": {
    "lib": "dist",
    "test": "tests"
  },
  "files": [
    "bin",
    "dist"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lbwa/esw.git",
    "directory": "packages/esw"
  },
  "scripts": {
    "build": "esbuild src/bin/*.ts src/index.ts --bundle --platform=node --outdir=dist --outbase=src --tsconfig=tsconfig.json --target=node14 --external:rxjs --external:esbuild --external:arg --external:type-fest --external:lodash --external:@eswjs/common --external:chokidar",
    "watch": "yarn build --watch",
    "prepublishOnly": "yarn build",
    "test": "echo \"Error: run tests from root\" && exit 1"
  },
  "bugs": {
    "url": "https://github.com/lbwa/esw/issues"
  },
  "devDependencies": {
    "@lbwa/tsconfig": "^1.1.0",
    "@types/cross-spawn": "^6.0.2",
    "@types/lodash": "^4.14.171",
    "cross-spawn": "^7.0.3",
    "typescript": "^4.5.4"
  },
  "peerDependenciesMeta": {},
  "dependencies": {
    "@eswjs/common": "^0.6.0",
    "arg": "^5.0.0",
    "chokidar": "^3.5.2",
    "esbuild": "~0.14.10",
    "lodash": "^4.17.21",
    "rxjs": "~7.4.0",
    "type-fest": "^1.2.2"
  },
  "engines": {
    "node": ">=14.14.0"
  }
}
