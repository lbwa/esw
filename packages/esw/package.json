{
  "name": "esw",
  "version": "0.0.1-alpha.1",
  "description": "The lightweight build tool for JavaScript/TypeScript library.",
  "keywords": [
    "esbuild",
    "typescript",
    "library",
    "build-tool"
  ],
  "author": "Liu Bowen <mr_lbw@outlook.com>",
  "homepage": "https://github.com/lbwa/esw/tree/main/packages/esw#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "esw": "dist/bin/esw.js"
  },
  "directories": {
    "lib": "dist",
    "test": "tests"
  },
  "files": [
    "bin",
    "dist"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/lbwa/esw.git",
    "directory": "packages/esw"
  },
  "scripts": {
    "build": "esbuild src/bin/*.ts src/index.ts --bundle --platform=node --outdir=dist --tsconfig=tsconfig.json --external:rxjs --external:esbuild --external:arg --external:chalk --external:type-fest",
    "watch": "yarn build --watch",
    "test": "echo \"Error: run tests from root\" && exit 1"
  },
  "bugs": {
    "url": "https://github.com/lbwa/esw/issues"
  },
  "devDependencies": {
    "@lbwa/tsconfig": "^0.2.0",
    "typescript": "^4.3.5"
  },
  "peerDependenciesMeta": {},
  "dependencies": {
    "arg": "^5.0.0",
    "chalk": "^4.1.1",
    "esbuild": "^0.12.15",
    "rxjs": "^7.2.0",
    "type-fest": "^1.2.2"
  },
  "engines": {
    "node": ">=14.14.0"
  }
}
