{
  "$schema": "https://json.schemastore.org/lerna.json",
  "packages": ["packages/*"],
  "version": "independent",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "ignoreChanges": ["**/*.md", "test/**/*", "**/*.spec.ts", "tsconfig.json"],
  "command": {
    "version": {
      "message": "chore(release): publish"
    },
    "publish": {
      "registry": "https://registry.npmjs.org/"
    }
  }
}
