{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "prepare": "husky install && lerna bootstrap",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,sass,less,md}\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "watch": "lerna run watch --stream --parallel",
    "build": "lerna run build --stream --parallel"
  },
  "devDependencies": {
    "@lbwa/eslint-config-typescript": "^0.3.1",
    "@lbwa/prettier-config": "^0.1.0",
    "@lbwa/tsconfig": "^0.2.0",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "eslint": "^7.25.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  },
  "prettier": "@lbwa/prettier-config",
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx,json,css,scss,sass,less,md}": [
      "prettier --write"
    ],
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  }
}
